extends layout

block content
  h1= title
   - let results = [{van_color:"red",van_size:"small",van_cost:"$4000"},{van_color:"black",van_size:"medium",van_cost:"$7000"},{van_color:"white",van_size:"large",van_cost:"$6000"}]
  div(class="container-fluid")
    div(class="row")
      each item,index in results
        div(class="col-sm-2",onClick=`buy(${index})`)
          p Color is #{item.van_color}
          p size is #{item.van_size}
          p Cost is #{item.van_cost}
          //- Bonus Logic
  script.
    buy= (i) =>{
      i+=1;
      alert(`You Purchased Item ${i}`);
    }  
    
    
